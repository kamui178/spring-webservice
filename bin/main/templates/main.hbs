	<!-- click modal {s}-->
	<div class="modal fade" id="savePostsModal" tabindex="-1" role="dialog" aria-labelledby="savePostsLabel"
		aria-hidden="true">
		<div class="modal-dialog" role="document">
			<div class="modal-content">
				<div calss="modal-header">
					<h5 class="modal-title" id="savePostsLabel">
						ui 디자인 따위 바라지마
<!--                        ajax(비동기) 아니라서, 글쓰면 전체 refresh 됨.-->
					</h5>
					<button type="button" class="close" data-dismiss="modal" aria-label="Close">
						<sapn aria-hidden="true">
							&times;
						</sapn>
					</button>
				</div>
				<div class="modal-body">
					<form>
						<div class="form-group">
							<label for="title"> 이름 </label>
							<input type="text" class='form-control' id="title" placeholder="Insert your title">
						</div>
						<div class="form-group">
							<label for="author"> 내용 </label>
							<input type="text" class="form-control" id="author" placeholder="Insert yout content">
						</div>

						<div class="form-group" hidden="hidden">
							<label for="content"> test hidden </label>
							<textarea class="form-control" id="content" placeholder="Insert your content"></textarea>
						</div>

					</form>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-secondary" data-dismiss="modal"> cancel </button>
					<button type="button" class="btn btn-primary" id="btn-save"> apply </button>
				</div>
			</div>
		</div>
